<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/find_result_item_tip_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tip_icon" />

    <ImageView
        android:id="@+id/find_result_item_img"
        android:layout_width="103dp"
        android:layout_height="66dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/find_result_item_tip_img"
        android:scaleType="centerCrop"
        android:src="@drawable/default_103x66" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/find_result_item_img"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/find_result_item_img"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/find_result_item_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/index_title_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/find_result_item_info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/index_listview_item_text_color"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:id="@+id/find_result_item_line"
        style="@style/line_style"
        android:layout_below="@+id/find_result_item_img"
        android:layout_marginTop="15dip" />

</RelativeLayout>